<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/custom_del"
        android:background="@drawable/ic_remove_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/custom_edit_text"
        android:layout_width="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/custom_edit_shape"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_height="40dp" />
    <ImageView
        android:id="@+id/custom_add"
        android:background="@drawable/ic_add_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
